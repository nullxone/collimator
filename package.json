{
  "name": "collimator",
  "description": "Reflection & Introspection for PostgreSQL Databases",
  "repository": {
    "type": "git",
    "url": "https://github.com/radify/collimator.git"
  },
  "main": "lib/collimator.js",
  "author": "Radify",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "babel-core": "^6.2.1",
    "babel-plugin-rewire": "1.0.0-beta-5",
    "babel-preset-es2015": "^6.1.18",
    "cz-conventional-changelog": "^1.1.5",
    "del": "^2.1.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.0",
    "gulp-ignore": "^2.0.1",
    "gulp-istanbul": "^0.10.3",
    "gulp-jasmine": "^2.3.0",
    "gulp-jscs": "^3.0.2",
    "gulp-markdox2": "^1.9.94",
    "gulp-rename": "^1.2.2",
    "gulp-typedoc": "github:sierrasoftworks/gulp-typedoc#v1.8.10",
    "gulp-typescript": "^2.12.0",
    "isparta": "^4.0.0",
    "jasmine-rewire": "^1.2.0",
    "merge2": "^1.0.2",
    "repeating-cli": "^1.0.0",
    "require-dir": "^0.3.0",
    "semantic-release": "^4.3.5",
    "typedoc": "github:sierrasoftworks/typedoc#v1.8.10",
    "typings": "^1.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  },
  "build": {
    "paths": {
      "src": "src",
      "spec": "spec",
      "dist": "lib",
      "docs": "docs",
      "build": "build",
      "coverage": "coverage",
      "temp": "temp",
      "sql": "src/**/*.sql"
    },
    "watch": {
      "paths": "src"
    }
  },
  "jshintConfig": {
    "esnext": true
  },
  "jscsConfig": {
    "preset": "google",
    "jsDoc": {
      "checkAnnotations": "jsdoc3"
    },
    "esnext": true,
    "disallowParenthesesAroundArrowParam": true,
    "requireArrowFunctions": true,
    "requireShorthandArrowFunctions": true,
    "requireTemplateStrings": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "callsite": "^1.0.0",
    "ramda": "^0.19.1"
  },
  "scripts": {
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  }
}
